# API Configuration
VITE_API_BASE_URL=http://localhost:8081/
VITE_API_LOCAL_URL=http://localhost:8081/
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=Pharmacy Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive pharmacy management system

# Environment
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_LOGGING=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Cache Configuration
VITE_CACHE_TIME=300000
VITE_STALE_TIME=60000

# Notification Configuration
VITE_TOAST_POSITION=top-right
VITE_TOAST_AUTO_CLOSE=5000

# Print Configuration
VITE_PRINT_MARGIN=10mm
VITE_PRINT_FORMAT=A4

# Development Configuration
VITE_DEBUG=true
VITE_MOCK_API=false
