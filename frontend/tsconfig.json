{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["page/*"],
      "@/hooks/*": ["hooks/*"],
      "@/utils/*": ["utils/*"],
      "@/constants/*": ["constants/*"],
      "@/server-action/*": ["server-action/*"],
      "@/global/*": ["global/*"],
      "@/store/*": ["store/*"],
      "@/types/*": ["types/*"]
    },
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "page/**/*.ts",
    "page/**/*.tsx",
    "page/**/*.js",
    "page/**/*.jsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "global/**/*.ts",
    "global/**/*.tsx",
    "server-action/**/*.ts",
    "server-action/**/*.tsx",
    "inventory/**/*.ts",
    "inventory/**/*.tsx",
    "pos/**/*.ts",
    "pos/**/*.tsx",
    "Finance/**/*.ts",
    "Finance/**/*.tsx",
    "Medicine-Request/**/*.ts",
    "Medicine-Request/**/*.tsx",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
